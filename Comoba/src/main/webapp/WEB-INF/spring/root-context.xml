	<!-- ===== #128. log4j 관련 myBatis(JDBC)설정 연결문자열 설정하기 ===== -->
	<!-- 먼저 위의 #16. myBatis(JDBC) 설정 연결 문자열 설정하기를 주석처리 한 이후에 아래와 같이 한다. -->
 
   <bean id="dataSourceSpied" class="org.apache.commons.dbcp.BasicDataSource">
      <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
      <property name="url" value="jdbc:oracle:thin:@comoba.c3phwgpnquo0.us-east-2.rds.amazonaws.com:1521:ORCL" />
      <property name="username" value="awscomoba" />
      <property name="password" value="comoba1!" />
   </bean> 
   
	<bean id="dataSource" class="net.sf.log4jdbc.Log4jdbcProxyDataSource">  
		<constructor-arg ref="dataSourceSpied" />
		<property name="logFormatter">
			<bean class="net.sf.log4jdbc.tools.Log4JdbcCustomFormatter">    
				<property name="loggingType" value="MULTI_LINE" />
				<property name="sqlPrefix" value="SQL        :   " />
			</bean>
		</property>
	</bean> 

	
	<!-- ===== #17. mapper 파일 위치 지정하기 ===== -->
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean"> 
		<property name="mapperLocations" value="classpath*:com/comoba/*/mapper/*.xml" />
		<property name="dataSource" ref="dataSource" />    
	</bean>
		
	<!-- ===== #18. sqlSessionTemplate 의존 객체 설정하기 ===== -->	
	<bean id="sqlsession" class="org.mybatis.spring.SqlSessionTemplate"> 
		<constructor-arg index="0" ref="sqlSessionFactory" /> 
	</bean> 
	
	
	<!-- ===== #19. 트랜잭션매니저를 설정하기.
	                  트랜잭션 처리를 위해서 먼저 Namespaces 에서 tx 를 추가한후 아래와 같이 트랜잭션매니저 빈을 등록해야 한다. =====  -->
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>
	<tx:annotation-driven transaction-manager="transactionManager" />
	
	
	<!-- ===== #20.  jackson을 사용하기 위해 빈을 등록한다. ===== -->
	<bean id="jacksonMessageConverter" class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter"/> 
	
		
</beans>
